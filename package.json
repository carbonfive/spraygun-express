{
  "name": "app-prototype",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently -k -r npm:client:start npm:server:start",
    "lint": "npm-run-all -c client:lint server:lint",
    "test": "npm-run-all -c client:test:coverage server:test:coverage",
    "server": "node app/server.js",
    "postinstall": "cd client && yarn install",
    "precommit": "npm-run-all -c client:precommit server:precommit",
    "heroku-postbuild": "cd client && npm-run-all heroku-postbuild",
    "client:start": "cd client && npm-run-all start",
    "client:lint": "cd client && npm-run-all lint",
    "client:test": "cd client && npm-run-all test",
    "client:test:coverage": "cd client && npm-run-all test:coverage",
    "client:precommit": "cd client && npm-run-all precommit",
    "server:start": "nodemon --watch . --watch .env.development --watch .env.development.local app/server.js",
    "server:lint": "eslint 'app/**/*.js'",
    "server:test": "jest --watch",
    "server:test:coverage": "jest --coverage",
    "server:precommit": "lint-staged"
  },
  "lint-staged": {
    "app/**/*.js": "eslint"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "helmet": "^3.12.2",
    "jsonwebtoken": "^8.3.0",
    "module-alias": "^2.1.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "dotenv": "^6.0.0",
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "jest-junit": "^5.1.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "supertest": "^3.1.0"
  },
  "engines": {
    "node": "8.11.3",
    "yarn": "1.7.0"
  },
  "_moduleAliases": {
    "@app": "app"
  },
  "jest": {
    "roots": [
      "app"
    ],
    "moduleNameMapper": {
      "^@app(.*)$": "<rootDir>/app$1"
    }
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ]
}
